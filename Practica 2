-- Crear la tabla de empleados
CREATE TABLE Empleados (
    ID INT PRIMARY KEY IDENTITY(1,1),
    Nombre NVARCHAR(100),
    Cargo NVARCHAR(50),
    FechaIngreso DATE,
    Salario DECIMAL(10,2)
);
GO

